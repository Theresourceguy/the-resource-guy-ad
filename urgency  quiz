    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // --- Element References ---
            const quizForm = document.getElementById('urgencyQuiz');
            const quizContainer = quizForm.querySelector('.space-y-8');
            const resultsModal = document.getElementById('results-modal');
            const modalContent = document.getElementById('modal-content');
            const closeModalBtn = document.getElementById('close-modal');
            
            const questions = [
                "I seem to do my best work when I'm under pressure.",
                "I often blame the rush and press of external things for my failure to spend deep, introspective time with myself.",
                "I'm often frustrated by the slowness of people and things around me. I hate to wait or stand in line.",
                "I feel guilty when I take time off work.",
                "I always seem to be rushing between places and events.",
                "I frequently find myself pushing people away so that I can finish a project.",
                "I feel anxious when I'm out of touch with the office for more than a few minutes.",
                "I'm often preoccupied with one thing when I'm doing something else.",
                "I'm at my best when I'm handling a crisis situation.",
                "The adrenaline rush from a new crisis seems more satisfying to me than the steady accomplishment of long-term results.",
                "I often give up quality time with important people in my life to handle a crisis.",
                "I assume people will naturally understand if I have to disappoint them or let things go in order to handle a crisis.",
                "I rely on solving some crisis to give my day a sense of meaning and purpose.",
                "I often eat lunch or other meals while I work.",
                "I keep thinking that someday I'll be able to do what I really want to do.",
                "A huge stack in my 'out' basket at the end of the day makes me feel like I've really been productive."
            ];

            // --- Populate Quiz with Questions ---
            function populateQuiz() {
                questions.forEach((q, index) => {
                    const questionBlock = document.createElement('div');
                    questionBlock.className = 'border border-slate-700 bg-black/20 p-5 rounded-lg';
                    
                    const questionText = `<p class="text-lg font-semibold text-slate-200 mb-4">${index + 1}. ${q}</p>`;
                    
                    const optionsHtml = `
                        <div class="flex items-center justify-between sm:justify-around flex-wrap gap-y-3">
                            ${[0, 1, 2, 3, 4].map(val => `
                                <label class="flex flex-col items-center gap-1 cursor-pointer">
                                    <input type="radio" name="question${index}" value="${val}" class="scale-input" required>
                                    <span class="scale-label text-sm text-slate-400">${getLabelForValue(val)}</span>
                                </label>
                            `).join('')}
                        </div>
                    `;

                    questionBlock.innerHTML = questionText + optionsHtml;
                    quizContainer.appendChild(questionBlock);
                });
            }
            
            function getLabelForValue(value) {
                switch(value) {
                    case 0: return 'Never';
                    case 1: return 'Rarely';
                    case 2: return 'Sometimes';
                    case 3: return 'Often';
                    case 4: return 'Always';
                    default: return '';
                }
            }

            // --- Handle Quiz Submission ---
            quizForm.addEventListener('submit', function (e) {
                e.preventDefault();
                
                let totalScore = 0;
                const formData = new FormData(quizForm);
                if (Array.from(formData.keys()).length < questions.length) {
                    // Replace alert with a more styled message if desired
                    alert('You must answer all questions to get an accurate assessment.');
                    return;
                }

                for (let value of formData.values()) {
                    totalScore += parseInt(value, 10);
                }
                
                displayResults(totalScore);
            });

            // --- Display Results in Modal ---
            function displayResults(score) {
                const resultScoreEl = document.getElementById('result-score');
                const resultTitleEl = document.getElementById('result-title');
                const resultDescriptionEl = document.getElementById('result-description');

                resultScoreEl.textContent = score;

                if (score <= 25) {
                    resultTitleEl.textContent = "Low Urgency Mind-set";
                    resultDescriptionEl.textContent = "Your score suggests the urgency paradigm is not a significant factor in your life. You have a healthy relationship with urgency and are likely able to focus on what's truly important.";
                } else if (score <= 45) {
                    resultTitleEl.textContent = "Strong Urgency Mind-set";
                    resultDescriptionEl.textContent = "Your score suggests that urgency is a fundamental operational paradigm for you. You may often feel controlled by deadlines and external pressures, making it hard to focus on long-term goals.";
                } else {
                    resultTitleEl.textContent = "Urgency Addiction";
                    resultDescriptionEl.textContent = "Your score indicates you may be addicted to urgency. Some people get so used to the adrenaline rush of handling crises that they become dependent on it for a sense of excitement and energy. While this can feel validating, it prevents you from addressing your most important, long-term priorities.";
                }

                showModal();
            }
            
            // --- Modal Visibility ---
            function showModal() {
                resultsModal.classList.remove('hidden');
                resultsModal.classList.add('flex');
                setTimeout(() => {
                    modalContent.classList.remove('scale-95', 'opacity-0');
                    modalContent.classList.add('scale-100', 'opacity-100');
                }, 50);
            }

            function hideModal() {
                modalContent.classList.add('scale-95', 'opacity-0');
                modalContent.classList.remove('scale-100', 'opacity-100');
                setTimeout(() => {
                    resultsModal.classList.add('hidden');
                    resultsModal.classList.remove('flex');
                }, 300);
            }

            closeModalBtn.addEventListener('click', hideModal);
            resultsModal.addEventListener('click', function(e) {
                if (e.target === resultsModal) {
                    hideModal();
                }
            });
            
            // --- Initialize the Quiz ---
            populateQuiz();
        });
    </script>

</body>
</html>
